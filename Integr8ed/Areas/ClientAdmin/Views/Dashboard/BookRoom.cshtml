        <div class="col-md-3">
            <div class="card">
                <img src="https://i.stack.imgur.com/y9DpT.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <a href="#" data-toggle="modal" data-target="#myModal" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <img src="https://i.stack.imgur.com/y9DpT.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <a href="#" data-toggle="modal" data-target="#myModal" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <img src="https://i.stack.imgur.com/y9DpT.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <a href="#" data-toggle="modal" data-target="#myModal" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>

    </div>

    <!-- Modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div id="myCarousel" class="carousel slide">

                                <!-- Indicators -->
                                <ul class="carousel-indicators">
                                    <li class="item1 active"></li>
                                    <li class="item2"></li>
                                    <li class="item3"></li>
                                </ul>

                                <!-- The slideshow -->
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="https://i.stack.imgur.com/y9DpT.jpg" alt="Los Angeles" width="100%" height="500">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="https://i.stack.imgur.com/y9DpT.jpg" alt="Chicago" width="100%" height="500">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="https://i.stack.imgur.com/y9DpT.jpg" alt="New York" width="100%" height="500">
                                    </div>
                                </div>

                                <!-- Left and right controls -->
                                <a class="carousel-control-prev" href="#myCarousel">
                                    <span class="carousel-control-prev-icon"></span>
                                </a>
                                <a class="carousel-control-next" href="#myCarousel">
                                    <span class="carousel-control-next-icon"></span>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h4>The Byke Old Anchor Beach Resort & Spa</h4>
                            <p> Deluxe Room  –  Max people: 2</p>
                            <p>1 queen bed</p>
                            <p class="text-green"><small>Breakfast includedFREE cancellation • No prepayment needed</small></p>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <button class="btn btn-primary">Check availiblity</button>
                                </div>

                            </div>
                            <div class="d-flex my-3 align-items-center">
                                <label for="exampleFormControlInput1" class="form-label whitespace-no mr-2" > See availiblity</label>

                                <input type="date" class="form-control" />

                            </div>
                            <div class="table-grid">
                                <div class="table-grid-block">
                                    <p class="available-time">8AM</p>
                                    <p class="available-status"><span class="badge bg-primary">Available</span></p>
                                </div>
                                <div class="table-grid-block">
                                    <p class="available-time">9AM</p>
                                    <p class="available-status"><span class="badge bg-secondary">Not Available</span></p>
                                </div>
                                <div class="table-grid-block">
                                    <p class="available-time">10AM</p>
                                    <p class="available-status"><span class="badge bg-warning text-dark">Available</span></p>
                                </div>
                                <div class="table-grid-block">
                                    <p class="available-time">11AM</p>
                                    <p class="available-status"><span class="badge bg-secondary">Not Available</span></p>
                                </div>
                            </div>

                            <div class="d-flex mt-5">
                                <div class="m-2">
                                    <label for="exampleFormControlInput1" class="form-label">Email address</label>
                                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                                </div>

                                <div class="m-2">
                                    <label for="exampleFormControlInput1" class="form-label">Email address</label>
                                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                                </div>

                                <div class="m-2">
                                    <label for="exampleFormControlInput1" class="form-label">Email address</label>
                                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                                </div>


                            </div>
                            <div class="m-2">
                                <button type="button" class="btn btn-primary">Primary</button>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
$(document).ready(function(){
  // Activate Carousel
  $("#myCarousel").carousel();

  // Enable Carousel Indicators
  $(".item1").click(function(){
    $("#myCarousel").carousel(0);
  });
  $(".item2").click(function(){
    $("#myCarousel").carousel(1);
  });
  $(".item3").click(function(){
    $("#myCarousel").carousel(2);
  });

  // Enable Carousel Controls
  $(".carousel-control-prev").click(function(){
    $("#myCarousel").carousel("prev");
  });
  $(".carousel-control-next").click(function(){
    $("#myCarousel").carousel("next");
  });
});
    </script>
}