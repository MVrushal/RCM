<script type="text/javascript">

    $(document).ready(function () {

        SelectAll();
        MakeAdmin();
        makeDropDisable();

        var validationresult = $("#frmUserAccess").validate({

            submitHandler: function (form) {
                
                $("#frmUserAccess").find('input[type="checkbox"]').prop("disabled", false);
                let post_url = form.action;
                let form_data = $(form).serialize();
                $.post(post_url, form_data, function (response) {
                    Integr8ed.HandleResponse(response);
                    if (response.status === 1) {
                        closeModal();

                        refreshDatatable("#tblUserDetail");
                        return false;
                    }
                });

            }
        });
    });


    $(document).on("change", "input[type='checkbox']", function () {
        checkallSelected();
    });

    function SelectAll() {

        $("#SelectAll").on("change", function () {
            var allcheck = $("#frmUserAccess").find("input[type='checkbox']");
            $.each(allcheck, function (key, ele) {
                if ($(ele).attr("id") != "BranchAdmin") {
                    if ($(ele).prop("id") == "SelectAll") {
                        $(ele).prop("checked", $(ele).prop("checked") ? true : false)

                    } else {
                        $(ele).prop("checked", $(ele).prop("checked") ? false : true)
                    }

                }
            });
        });
    }

    function checkallSelected() {
        var checklist = $("#frmUserAccess").find('input[type="checkbox"]');
        $.each(checklist, function (key, ele) {
            if ($(ele).attr('id') != "BranchAdmin" && $(ele).attr('id') != "SelectAll") {
                if (!$(ele).prop("checked")) {
                    $("#SelectAll").prop("checked", false);
                    return false;
                }
            }
        })
    }

    function MakeAdmin() {
        if ($("#BranchAdmin").prop("checked")) {
            $("#frmUserAccess").find('input[type="checkbox"]').prop("checked", true);
            $("#frmUserAccess").find('input[type="checkbox"]').prop("disabled", true);
            $("#BranchAdmin").prop("disabled", false);
        }
        $("#BranchAdmin").on("change", function () {
            if ($(this).prop("checked")) {
                $("#frmUserAccess").find('input[type="checkbox"]').prop("checked", true);
                $("#frmUserAccess").find('input[type="checkbox"]').prop("disabled", true);
                $(this).prop("disabled", false);
            } else {
                $("#frmUserAccess").find('input[type="checkbox"]').prop("disabled", false);
            }
        });


    }

    function makeDropDisable() {


        if (@HttpContextAccessor.HttpContext.Session.GetInt32("IsAdmin") === 1 || @HttpContextAccessor.HttpContext.Session.GetInt32("IsBranchAdmin")===1) {
            $(".AccessBranch").prop("disabled", false);
            $("#BranchAccessSpan").hide();


        } else {
            $(".AccessBranch").prop("disabled", true);
            $("#BranchAccessSpan").show();
        }
    }


    $.ajax({
