@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-first">
                <h3>Change Password</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-last">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                       
                        <li class="breadcrumb-item"><a href="/SuperAdmin/Company/index">Admin Organisation</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                    </ol>
                </nav>
            </div>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <section id="multiple-column-form" class="">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <form id="change-password-form" method="post">
                                                <div asp-validation-summary="All" class="text-danger"></div>
                                                <div class="form-group">
                                                    <label asp-for="Input.OldPassword"></label>
                                                    <input asp-for="Input.OldPassword" class="form-control" />
                                                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Input.NewPassword"></label>
                                                    <input asp-for="Input.NewPassword" class="form-control" />
                                                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Input.ConfirmPassword"></label>
                                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Update password</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
